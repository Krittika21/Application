@model IEnumerable<WebApplication1.Models.TestType>

@{
    ViewData["Title"] = "CreateTest";
}

<h2>CREATE NEW TEST</h2>
<a asp-action="Index" style="float:right">x</a>
<hr />
<div class="row" style="align-items:center">
    <div class="col-md-4">
        <form asp-action="CreateNewTest">
            <div class="form-group">
                <label for="test" style="text-align:center"> Test </label>
                <br />
                <select id="TestType" name="TestType" style="align-items:center">
                    @foreach (var item in Model)
                    {
                        <option>@item.TestName</option>

                    }
                </select>
            </div>
            <div>
                <label for="date" style="text-align:center"> Date </label>
                <br />
                <input type="datetime-local" id="TestDate" name="TestDate" />
            </div>
            <br />
            <div>
                <button class="btn-default" type="submit">Create</button>
            </div>
        </form>
    </div>
</div>
<br />

