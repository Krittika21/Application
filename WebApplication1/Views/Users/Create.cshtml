@model IEnumerable<WebApplication1.Models.User>

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="Name" class="control-label"> Name </label>
                <input id="Name" name="Name" class="form-control" />
                
            </div>
            <div class="form-group">
                <label for="UserRole" class="control-label" style="text-align:center"> User Role</label> 
                <br/>
                <select id="UserRole" name="UserRole" style="align-items:center; padding: 0.5em; padding-right:20.5em">
                    @foreach (var item in Enum.GetValues(typeof(UserRole)))
                    {
                    <option> @item</option>
                    }
                </select>                
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

